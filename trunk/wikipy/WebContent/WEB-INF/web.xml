<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>wikipy</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:core-service-context.xml
			classpath:schedule-job-context.xml
		</param-value>
	</context-param>
	
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
		<param-name>forceEncoding</param-name>
		<param-value>true</param-value>
		</init-param> 
	</filter>
	
		
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/post</url-pattern>
	</filter-mapping>
			
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/postItem</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>	
	
	<servlet>
		<display-name>BasicRenderServlet</display-name>
		<servlet-name>BasicRenderServlet</servlet-name>
		<servlet-class>com.wikipy.web.BasicRenderServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ReceiveItemServlet</display-name>
		<servlet-name>ReceiveItemServlet</servlet-name>
		<servlet-class>
		com.wikipy.web.ReceiveItemServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>TextFormReceiver</display-name>
		<servlet-name>TextFormReceiver</servlet-name>
		<servlet-class>com.wikipy.web.TextFormReceiver</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>JobPostServlet</display-name>
		<servlet-name>JobPostServlet</servlet-name>
		<servlet-class>
		com.wikipy.web.JobPostServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>JsonReceiveServlet</display-name>
		<servlet-name>JsonReceiveServlet</servlet-name>
		<servlet-class>
		com.wikipy.web.JsonReceiveServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>PackDownJsonServlet</display-name>
		<servlet-name>PackDownJsonServlet</servlet-name>
		<servlet-class>
		com.wikipy.web.PackDownJsonServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BasicRenderServlet</servlet-name>
		<url-pattern>/b/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReceiveItemServlet</servlet-name>
		<url-pattern>/post</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TextFormReceiver</servlet-name>
		<url-pattern>/postItem</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JobPostServlet</servlet-name>
		<url-pattern>/feed/post</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JsonReceiveServlet</servlet-name>
		<url-pattern>/postJson</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PackDownJsonServlet</servlet-name>
		<url-pattern>/jsonpack</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>

