<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>FaR-server</display-name>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		<!-- 
			classpath:core-service-context.xml -->	
			classpath:*-service-context.xml
		</param-value>
	</context-param>
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
		<param-name>forceEncoding</param-name>
		<param-value>true </param-value>
		</init-param> 
	</filter>
	
	
	<filter>
		<display-name>SetUserFilter</display-name>
		<filter-name>SetUserFilter</filter-name>
		<filter-class>net.gqu.security.SetUserFilter</filter-class>
	</filter>
	<filter>
		<display-name>AuthenticationFilter</display-name>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>net.gqu.security.AuthenticationFilter</filter-class>
	</filter>

	<servlet>
		<display-name>RandomImgServlet</display-name>
		<servlet-name>RandomImgServlet</servlet-name>
		<servlet-class>net.gqu.servlet.RandomImgServlet</servlet-class>
	</servlet>
	
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>SetUserFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>SetUserFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
	
	
	<servlet>
		<display-name>LogoutServlet</display-name>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>net.gqu.security.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>net.gqu.security.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>RegisterServlet</display-name>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>net.gqu.security.RegisterServlet</servlet-class>
	</servlet>

	
	<servlet>
		<display-name>RestServiceServlet</display-name>
		<servlet-name>RestServiceServlet</servlet-name>
		<servlet-class>net.gqu.rest.RestServiceServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>GQServlet</display-name>
		<servlet-name>GQServlet</servlet-name>
		<servlet-class>net.gqu.webscript.GQServlet</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>RandomImgServlet</servlet-name>
		<url-pattern>/rndimg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestServiceServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GQServlet</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
