<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="dbProvider" class="net.gqu.mongodb.MongoDBProvider" init-method="init">
		<property name="ip">
			<value>${mongodb.ip}</value>
		</property>
		<property name="port">
			<value>${mongodb.port}</value>
		</property>
		<property name="mainDb">
			<value>${mongodb.maindb}</value>
		</property>
	</bean>
	
	<bean id="applicationService" class="net.gqu.application.ApplicationServiceImpl">
		<property name="mainServer" value="www.g-qu.net"></property>
		<property name="dbProvider" ref="dbProvider"></property>
	</bean>
	
	<bean id="contentService" class="net.gqu.content.GridFSContentService">
		<property name="dbProvider" ref="dbProvider"></property>
		<property name="userService" ref="userService"></property>
	</bean>
	
	<bean id="repositoryService" class="net.gqu.repository.RepositoryServiceImpl">
		<property name="loaders">
			<list>
				<ref bean="loader.github"/>
				<ref bean="loader.googlecode"/>
			</list>
		</property>
	</bean>
	
	<bean id="loader.github" class="net.gqu.repository.GitHubLoader">
	</bean>

	<bean id="loader.googlecode" class="net.gqu.repository.GoogleLoader">
	</bean>
	
	<bean id="cacheService" class="net.gqu.cache.EhCacheService"></bean>

	<bean id="userService" class="net.gqu.security.BasicUserService">
		<property name="dbProvider">
			<ref bean="dbProvider"/>
		</property>
		<property name="adminPassword">
			<value>${auth.adminpassword}</value>
		</property>
		<property name="registerPage">
			<value>${auth.registerpage}</value>
		</property>
		<property name="userdb">
			<value>${mongodb.userdb}</value>
		</property>
		<property name="loginPage">
			<value>${auth.loginpage}</value>
		</property>
		<property name="mainPage">
			<value>${auth.managepage}</value>
		</property>
	</bean>
	
	<bean id="script.object.generator" class="net.gqu.jscript.root.ScriptObjectGenerator">
		<property name="userService" ref="userService"></property>
	</bean>
	
	<bean id="scriptService" class="net.gqu.webscript.ScriptExecService" init-method="init">
	</bean>
	
	<bean id="rest.services" class="net.gqu.rest.WebRestService">
		<property name="applicationService" ref="applicationService"></property>
		<property name="cacheService" ref="cacheService"></property>
		<property name="userService" ref="userService"></property>
	</bean>

	<bean id="registry" class="net.gqu.rest.HttpServiceRegistry">
		<property name="injectedServices">
			<list>
				<ref bean="rest.services"/>
			</list>
		</property>
	</bean>


	<bean id="repository-properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders">
			<value>true</value>
		</property>
		<property name="locations">
			<list>
				<value>classpath:farserver.properties</value>
			</list>
		</property>
	</bean>
	
