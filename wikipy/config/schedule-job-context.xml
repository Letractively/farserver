<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="importerJob" class=" org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.wikipy.job.ImporterJob" />  
        <property name="jobDataAsMap">  
            <map>  
                <entry key="jobDAO" >
                	<ref bean="jobDAO"/>
                </entry>  
            </map>  
        </property>  
	</bean>

	<bean id="jobDAO" class="com.wikipy.job.JobDAO" init-method="init">
	<property name="jobCollection" value="jobs"></property>
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">  
            <property name="jobDetail" ref="importerJob" />  
            <property name="cronExpression" value="0 0/5 0-23 * * ?" />  
    </bean>  
          
    <bean id="jobScheduerFactory" lazy-init="false"   
                class="org.springframework.scheduling.quartz.SchedulerFactoryBean">  
            <property name="triggers">  
                <list>  
                    <ref bean="cronTrigger" />  
                </list>  
            </property>  
    </bean>  
	
</beans>
