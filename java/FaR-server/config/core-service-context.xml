<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="repository-properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders">
			<value>true</value>
		</property>
		<property name="locations">
			<list>
				<value>classpath:farserver.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="loggingService" class="net.gqu.logging.LoggingService" init-method="init">
		<property name="dbProvider" ref="dbProvider"></property>
		<property name="level">
			<value>${logger.level}</value>
		</property>
		<property name="scriptMax">
			<value>${logger.maxsize}</value>
		</property>
		<property name="systemMax">
			<value>${logger.maxsize}</value>
		</property>
	</bean>
	
	<bean id="dbProvider" class="net.gqu.mongodb.MongoDBProvider" init-method="init">
		<property name="ip">
			<value>${mongodb.ip}</value>
		</property>
		<property name="port">
			<value>${mongodb.port}</value>
		</property>
		<property name="mainDb">
			<value>${mongodb.maindb}</value>
		</property>
	</bean>
	
	<bean id="userService" class="com.ever365.security.UserService">
		<property name="dbProvider">
			<ref bean="dbProvider"/>
		</property>
		<property name="fileService" ref="fileService"></property>
		<property name="adminPassword">
			<value>${auth.adminpassword}</value>
		</property>
		<property name="userdb">
			<value>${mongodb.userdb}</value>
		</property>
	</bean>
	
	<bean id="rest.services" class="net.gqu.rest.WebRestService">
		<property name="applicationService" ref="applicationService"></property>
		<property name="cacheService" ref="cacheService"></property>
		<property name="userService" ref="userService"></property>
	</bean>

	<bean id="registry" class="com.ever365.rest.registry.HttpServiceRegistry">
		<property name="injectedServices">
			<list>
				<ref bean="rest.services"/>
			</list>
		</property>
	</bean>
</beans>
