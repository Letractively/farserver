<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="300">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>

	<s:Form width="100%">
		<s:FormItem width="767" label="任务名称">
			<s:TextInput width="580"/>
		</s:FormItem>
		<s:FormItem width="771" label="描述">
			<s:TextArea width="583" height="52"/>
		</s:FormItem>
		<s:FormItem width="276" label="开始于" layout="">
			<s:NumericStepper/>
			<s:TextInput width="94"/>
		</s:FormItem>
		
	</s:Form>
	<mx:DataGrid width="100%" height="305" showHeaders="false" verticalGridLines="false" verticalScrollPolicy="off">
		<mx:columns>
			<mx:DataGridColumn headerText="" >
				<mx:itemRenderer>
					<fx:Component>
						<mx:Image source="" width="32" height="32">
						</mx:Image>
						
						<s:Label text="{data.title}">
						</s:Label>
						
					</fx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn >
			<mx:DataGridColumn dataField="name"/>
			<mx:DataGridColumn dataField="modified" />	
		</mx:columns>
	</mx:DataGrid>`
	
	
</s:VGroup>
